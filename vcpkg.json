{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "cfd3d",
    "version": "0.1.0",
    "dependencies": [
        "glm",
        "netcdf-c"
    ],
    "features" : {
        "cuda": {
            "description": "Build with CUDA support.",
            "dependencies": [
                "cuda"
            ]
        },
        "opencl": {
            "description": "Build with OpenCL support.",
            "dependencies": [
                "opencl"
            ]
        },
        "mpi": {
            "description": "Build with MPI support.",
            "dependencies": [
                "mpi"
            ]
        }
    },
    "default-features": [
        "opencl", "mpi"
    ]
}
